<?xml version="1.0" encoding="UTF-8" ?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
       https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.9.xsd">

    <changeSet id="TICKET_4-1" author="Adrian Jasieniecki">
        <preConditions onFail="WARN">
            <not>
                <sequenceExists sequenceName="prescription_seq"/>
            </not>
        </preConditions>
        <createSequence sequenceName="prescription_seq" incrementBy="1" startValue="1"/>
    </changeSet>
    <changeSet id="TICKET_4-2" author="Adrian Jasieniecki">
        <preConditions onFail="WARN">
            <not>
                <tableExists tableName="PRESCRIPTIONS"/>
            </not>
        </preConditions>
        <createTable tableName="PRESCRIPTIONS">
            <column name="prescription_id" type="int">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="date_of_issue" type="date"/>
            <column name="medicines" type="varchar(1000)"/>
            <column name="prescription_code" type="varchar(20)"/>
            <column name="doctor_id" type="int">
                <constraints nullable="false"/>
            </column>
            <column name="patient_id" type="int">
                <constraints nullable="false"/>
            </column>
            <column name="visit_id" type="int">
                <constraints nullable="true"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="TICKET_4-3" author="Adrian Jasieniecki">
        <addForeignKeyConstraint baseTableName="PRESCRIPTIONS"
                                 baseColumnNames="prescription_id"
                                 constraintName="fk_prescription_doctor"
                                 referencedTableName="DOCTOR"
                                 referencedColumnNames="doctor_id"/>
    </changeSet>
    <changeSet id="TICKET_4-4" author="Adrian Jasieniecki">
        <addForeignKeyConstraint baseTableName="PRESCRIPTIONS"
                                 baseColumnNames="prescription_id"
                                 constraintName="fk_prescription_patient"
                                 referencedTableName="PATIENT"
                                 referencedColumnNames="patient_id"/>
    </changeSet>
    <changeSet id="TICKET_4-5" author="Adrian Jasieniecki">
        <addForeignKeyConstraint baseTableName="PRESCRIPTIONS"
                                 baseColumnNames="prescription_id"
                                 constraintName="fk_prescription_visit"
                                 referencedTableName="VISITS"
                                 referencedColumnNames="visits_id"/>
    </changeSet>
</databaseChangeLog>