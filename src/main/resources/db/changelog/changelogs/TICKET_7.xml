<?xml version="1.0" encoding="UTF-8" ?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
       https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.9.xsd">

    <changeSet id="TICKET_7-1" author="Adrian Jasieniecki">
        <preConditions>
            <not>
                <sequenceExists sequenceName="clinic_seq"/>
            </not>
        </preConditions>
        <createSequence sequenceName="clinic_seq" startValue="1" incrementBy="1"/>
    </changeSet>
    <changeSet id="TICKET_7-2" author="Adrian Jasieniecki">
        <preConditions>
            <not>
                <tableExists tableName="CLINICS"/>
            </not>
        </preConditions>
        <createTable tableName="CLINICS">
            <column name="clinic_id" type="int">
                <constraints nullable="false"/>
            </column>
            <column name="name" type="varchar(50)"/>
            <column name="phone_number" type="varchar(15)"/>
            <column name="street" type="varchar(50)"/>
            <column name="apartment_number" type="varchar(10)"/>
            <column name="city" type="varchar(30)"/>
            <column name="province" type="varchar(30)"/>
            <column name="country" type="varchar(30)"/>
            <column name="zip_code" type="varchar(7)"/>
        </createTable>
    </changeSet>
</databaseChangeLog>